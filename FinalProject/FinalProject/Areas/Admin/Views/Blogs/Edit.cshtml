@model FinalProject.Models.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data">

    <div class="form-horizontal">
        <h4>Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Quote, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Quote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @id = "ckEditor1" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var image in Model.Images)
                {
                    <img src="~/Uploads/Blog/@image.Name" alt="Alternate Text" width="100" />

                }
                @Html.TextBoxFor(model => model.ImageFile, new { @class = "form-control", @type = "file", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-10 form-group">
            <label>Category</label>
            <select class="form-control" name="CategoryId">
                @foreach (var item in ViewBag.Category)
                {
                    <option value="@item.Id" @(item.Id == Model.CategoryId ? "selected" : "")>@item.Name</option>
                }
            </select>
        </div>

        @foreach (var tags in Model.Tags)
        {
            <div class="categories">
                <div class="col-md-10 form-group">
                    <label>Tags</label>
                    <select class="form-control" name="TagId">
                        @foreach (var item in ViewBag.Tags)
                        {
                            <option value="@item.Id" @(item.Id == tags.BlogTagsId ? "selected" : "")>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section ckEditor{
    <script src="//cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
}
@model FinalProject.ViewModels.VmSearch
@using (Html.BeginForm("SearchBlog", "Search", FormMethod.Post))
{
    <div class="searchArea">
        @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @placeholder = "Search...", @class = "w-100", @style = "padding: 10px; border: #ddd 1px solid; border-radius: 5px; " } })
        <button type="submit" style="background-color: unset;border: unset; position: absolute;top: 15%;right: 1%;"><i class="fas fa-search"></i></button>
        <input type="hidden" name="Page" value="@Model.Page" />
    </div>
}

